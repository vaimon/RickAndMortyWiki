<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Base.Theme.RickAndMortyWiki" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.RickAndMortyWiki" parent="Base.Theme.RickAndMortyWiki">

    </style>

    <style name="Theme.RickAndMortyWiki.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">

    </style>

    <style name="Theme.RickAndMortyWiki.Splash" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.RickAndMortyWiki</item>
        <item name="android:windowSplashscreenContent">@drawable/background_static_logo</item>
    </style>

    <style name="Theme.RickAndMortyWiki.TextView.SingleLine" parent="Widget.MaterialComponents.TextView">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.RickAndMortyWiki.TextView.Name" parent="Theme.RickAndMortyWiki.TextView.SingleLine">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.RickAndMortyWiki.TextView.Key" parent="Theme.RickAndMortyWiki.TextView.SingleLine">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.RickAndMortyWiki.TextView.Value" parent="Theme.RickAndMortyWiki.TextView.SingleLine">
        <item name="android:textSize">16sp</item>
    </style>
</resources>